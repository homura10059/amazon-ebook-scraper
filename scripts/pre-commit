#!/bin/sh

# Pre-commit hook for Amazon Ebook Scraper
# Runs lint, build, and test commands before allowing commit

echo "Running pre-commit verification..."

# Run lint check
echo "1/3 Running lint check..."
if ! pnpm lint; then
    echo "❌ Lint check failed. Please fix linting issues before committing."
    exit 1
fi

# Run build check  
echo "2/3 Running build check..."
if ! pnpm build; then
    echo "❌ Build failed. Please fix compilation errors before committing."
    exit 1
fi

# Run test check
echo "3/3 Running test check..."
if ! pnpm test; then
    echo "❌ Tests failed. Please fix failing tests before committing."
    exit 1
fi

echo "✅ All pre-commit checks passed!"
exit 0